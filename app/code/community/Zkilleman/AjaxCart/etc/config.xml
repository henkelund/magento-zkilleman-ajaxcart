<config>
    <modules>
        <Zkilleman_AjaxCart>
            <version>0.1.1.0</version>
        </Zkilleman_AjaxCart>
    </modules>

    <frontend>
        <routers>
            <ajaxcart>
                <use>standard</use>
                <args>
                    <module>Zkilleman_AjaxCart</module>
                    <frontName>ajax-cart</frontName>
                </args>
            </ajaxcart>
        </routers>
        <layout>
            <updates>
                <ajaxcart>
                    <file>ajaxcart.xml</file>
                </ajaxcart>
            </updates>
        </layout>
    </frontend>

    <global>
        <blocks>
            <checkout>
                <rewrite>
                    <cart_item_renderer>Zkilleman_AjaxCart_Block_Cart_Item_Renderer</cart_item_renderer>
                </rewrite>
                <rewrite>
                    <cart_item_renderer_configurable>Zkilleman_AjaxCart_Block_Cart_Item_Renderer_Configurable</cart_item_renderer_configurable>
                </rewrite>
            </checkout>
        </blocks>
        <helpers>
            <ajaxcart>
                <class>Zkilleman_AjaxCart_Helper</class>
            </ajaxcart>
        </helpers>
        <models>
            <ajaxcart>
                <class>Zkilleman_AjaxCart_Model</class>
            </ajaxcart>
        </models>
        <ajaxcart>
            <response_blocks>
                <top_links>top.links</top_links>
                <sidebar_cart>cart_sidebar</sidebar_cart>
            </response_blocks>
        </ajaxcart>
    </global>

    <default>
        <ajaxcart>
            <general>
                <enabled>1</enabled>
            </general>
        </ajaxcart>
    </default>
</config>
